<Window x:Class="WpfUniversity.Views.Courses.EditCourseForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfUniversity.Views.Courses"
        mc:Ignorable="d"
        Title="Edit Course" Height="260" Width="300"
         x:Name="EditCourse_Form">
    <Grid>
        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Top"  >
            <Label x:Name="lNameCourse" Margin="5" Height="35">Name:</Label>
            <TextBox x:Name="tbNameCourse" Margin="5" Height="25"></TextBox>
            <Label x:Name="lDescriptionCourse" Margin="5" Height="35">Description:</Label>
            <TextBox x:Name="tbDescriptionCourse" Margin="5" Height="25"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" >
            <Button x:Name="save" Margin="10" Padding="20 10" Click="save_Click">Save</Button>
            <Button x:Name="close" Margin="10" Padding="20 10" Click="close_Click">Close</Button>
        </StackPanel>
    </Grid>
</Window>
